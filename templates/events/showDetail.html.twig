{% extends "/base.html.twig" %}
{% block body %}
<div class="flex">
<div class="product-detail">
    <div class="row">
        <div class ="col-6">
            <h3>{{event.name}}</h3>
            <img src={{event.image ? vich_uploader_asset(event) : asset('images/placeholder.jpg')}} >
            <p>{{event.description}}</p>
            <p>Intervenant</p>
            {% for user in event.getUsers %}
            <p>{{user.name}}</p>
            {% endfor %}
        </div>
        <div class="col-4">
        <h4>Adresse</h4>
        <div id="map"><img src="../uploads/map.png"></div>
        <p>Paris,11</p>
        <p>{{event.date|date}}</p>
        
        </div>
    </div>
    <div>
        <p>{{event.price}}â‚¬</p>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{path('app_event_update', {id:event.id})}}">Modifier</a>
        <form method="post" action="{{path('app_event_delete', {id:event.id})}}" style="display:inline-block" onsubmit= "return confirm('Etes vous vraiment sure?')">
        <input type="hidden" name="method" value="DELETE">
        <button class="btn btn-danger">Supprimer</button>
        </form>
        {% endif %}
        {# {% if (app.user != USER['ROLE_ADMIN']) %} #}
        <button class="btn btn-danger"><a href="{{path('app_basket_add', {id:event.id})}}">Acheter</a></button>
        {# {% endif %} #}
     </div>
</div>
</div>
{% endblock %}