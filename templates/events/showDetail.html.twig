{% extends "/base.html.twig" %}
{% block body %}
<div class="nav-bg-div">
</div>
<div class="flex-center-col ">
    <div class="product-detail-container mt-4">
        <div class="product-detail ">
            <div class="top-detail">  
                <div class="image-event-detail img-container-event">        
                    <img class="image-zoom" src={{event.image ? vich_uploader_asset(event) : asset('images/placeholder.jpg')}}  >
                </div>
                <div class="info-event-detail">
                    <h1 class="mb-3 detail-title">{{event.name}}</h1>
                    <div class="mb-2">
                        <p class=""><i class="fa-solid fa-location-dot mr-2"></i>Paris,11</p>
                        <p><i class="fa-regular fa-calendar mr-2"></i>{{event.date|date}}</p>
            
                    </div>
                    <p>{{event.description}}</p>
                </div>
            </div>
            <div class="bottom-detail d-flex">
            
                <div class="therapist-container">
                    <h2 class="text-left" id="therapist-detail-title">Intervenant</h2>
                    <div class="therapist-detail d-flex w-100">             
                        {% if  event.therapist %}
                        <div class="mr-3">
                        
                            <img src={{event.therapist.image ? vich_uploader_asset(event.therapist) : asset('uploads/profil.jpeg')}}  >
                            <p id="name-therapist-detail">{{event.therapist.name}}</p>
                        </div>
                        <p>{{event.therapist.description}}</p>
                        {% endif %} 
                    </div>
                </div>
                <div id="map">
                
                    <h3>addresse: </h3>
                    
                    <img class="image-zoom" src="../uploads/map.png">
                    
                </div>
            </div> 
        </div> 
        <div class="event-action">
            <div class="d-flex mb-2">   
                <p class="detail-event-price">{{event.price}}€</p>
                
                {# {% if (app.user != USER['ROLE_ADMIN']) %} #}
                <button class="btn-color1 btn-art"><a class="text-light" href="{{path('app_basket_add', {id:event.id})}}">Réserver</a></button>
                {# {% endif %} #}
            </div>
            
        </div>
        </div>
    </div>
</div>
{% endblock %}